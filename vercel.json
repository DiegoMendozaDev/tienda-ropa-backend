{    
    "version": 2,
    "regions": ["fra1"],
    "functions": {
        "api\/*.php": {
            "runtime": "vercel-php@0.7.1"
        },
        "api/index.php": {
            "runtime": "vercel-php@0.7.3"
        }
    },
    "env": {
        "APP_ENV": "prod"
    },
    "routes": [
        {
            "src": "\/(assets)\/(.*)$",
            "dest": "\\\/api\\\/assets.php?path=\\\/$2"
        },
        {
            "src": "\/(.*)",
            "dest": "\/api\/index.php"
        },
        {
            "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))$",
            "dest": "/public/$1"
        }
    ],
    "outputDirectory": "public"
}
